<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Image permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".GetGoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/getgo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/getgo_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetGo"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

<!--        <meta-data-->
<!--            android:name="com.mapbox.maps.accessToken"-->
<!--            android:value="@string/mapbox_access_token"/>-->

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCBpfJRsfmQwttGjqAApSL8EjTaB4guK5c"/>


        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.getgo.OPEN_REGISTER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ResetPasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="getgo" android:host="reset-password" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ActivationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="getgo"
                    android:host="activate"
                    android:pathPrefix="/" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ForgotPasswordRequestActivity" />

    </application>

</manifest>