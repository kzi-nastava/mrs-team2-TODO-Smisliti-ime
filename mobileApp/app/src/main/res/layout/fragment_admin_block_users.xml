<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            style="@style/ProfileTitle"
            android:text="Block / Unblock Users"
            android:layout_marginBottom="24dp"/>

        <!-- Success Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSuccessMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#C8E6C9">

            <TextView
                android:id="@+id/tvSuccessMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Error Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFCDD2">

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- BLOCK SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block a User"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="12dp"/>

        <!-- Search unblocked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0dp"
                android:hint="Search by email...">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUnblockedSearch"
                    style="@style/AppTextInputEditText"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchUnblocked"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Search"/>
        </LinearLayout>

        <!-- Unblocked users table -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/dark_blue"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Email"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Role"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Rows -->
                <LinearLayout
                    android:id="@+id/layoutUnblockedUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <!-- Empty state -->
                <TextView
                    android:id="@+id/tvNoUnblockedUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No users found"
                    android:gravity="center"
                    android:padding="20dp"
                    android:textColor="#6B8BB5"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pagination unblocked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnblockedPrev"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:textColor="@color/dark_blue"/>

            <TextView
                android:id="@+id/tvUnblockedPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page 1 / 1"
                android:textColor="@color/dark_blue"
                android:layout_marginHorizontal="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnblockedNext"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@color/dark_blue"/>
        </LinearLayout>

        <!-- Block reason + button -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTextInputLayout"
            android:hint="Block reason...">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBlockReason"
                style="@style/AppTextInputEditText"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBlockUser"
            style="@style/AppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Block User"
            android:layout_marginBottom="32dp"/>

        <!-- UNBLOCK SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unblock a User"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="12dp"/>

        <!-- Search blocked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0dp"
                android:hint="Search by email...">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBlockedSearch"
                    style="@style/AppTextInputEditText"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchBlocked"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Search"/>
        </LinearLayout>

        <!-- Blocked users table -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/dark_blue"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Email"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Role"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Rows -->
                <LinearLayout
                    android:id="@+id/layoutBlockedUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <!-- Empty state -->
                <TextView
                    android:id="@+id/tvNoBlockedUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No blocked users"
                    android:gravity="center"
                    android:padding="20dp"
                    android:textColor="#6B8BB5"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pagination blocked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBlockedPrev"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:textColor="@color/dark_blue"/>

            <TextView
                android:id="@+id/tvBlockedPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page 1 / 1"
                android:textColor="@color/dark_blue"
                android:layout_marginHorizontal="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBlockedNext"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@color/dark_blue"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUnblockUser"
            style="@style/AppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Unblock User"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>