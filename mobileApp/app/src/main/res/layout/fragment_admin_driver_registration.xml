<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Driver"
            style="@style/ProfileTitle"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Driver Info Form -->
        <LinearLayout
            android:id="@+id/layoutDriverForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="E-mail">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/AppTextInputEditText"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="First Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Last Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    style="@style/AppTextInputEditText"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:layout_marginBottom="24dp"
                android:hint="Address">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPostalAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Next"
                android:paddingHorizontal="60dp"
                android:paddingVertical="12dp"/>

        </LinearLayout>

        <!-- Vehicle Info Form -->
        <LinearLayout
            android:id="@+id/layoutVehicleForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Vehicle Model -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Vehicle Model">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleModel"
                    style="@style/AppTextInputEditText"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vehicle Type -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Vehicle Type">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleType"
                    style="@style/AppTextInputEditText"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Registration Number -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Registration Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLicensePlate"
                    style="@style/AppTextInputEditText"
                    android:inputType="textCapCharacters"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Number of Seats -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="Number of Seats">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSeats"
                    style="@style/AppTextInputEditText"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Checkboxes -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowsPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allows Pets"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="8dp"
                app:buttonTint="@color/dark_blue"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowsBabies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allows Babies"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="24dp"
                app:buttonTint="@color/dark_blue"/>

            <!-- Back / Register buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>