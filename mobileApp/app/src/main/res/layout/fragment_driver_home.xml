<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8FABD4">

    <!-- Map -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Ride Information -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fillViewport="true"
        android:background="#CBDCEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/layoutLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E8EEF5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading ride information..."
                    android:textSize="14sp"
                    android:textColor="#133E87"/>

            </LinearLayout>

            <!-- No Ride Assigned State -->
            <LinearLayout
                android:id="@+id/layoutNoRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E8EEF5"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No ride assigned. Wait for a passenger to request a ride."
                    android:textSize="14sp"
                    android:textColor="#133E87"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Ride Information State -->
            <LinearLayout
                android:id="@+id/layoutRideInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvRideTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Ride"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#133E87"
                    android:layout_marginBottom="16dp"/>

                <!-- Ride Info Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#E8EEF5"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <!-- Ride ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ride ID:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvRideId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Starting Point -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Starting Point:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvStartPoint"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Destination -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Destination:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Passenger -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Passenger:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvPassengerInfo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Total Passengers -->
                    <LinearLayout
                        android:id="@+id/layoutPassengerCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Passengers:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvPassengerCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Estimated Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Time:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvEstimatedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Estimated Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Price:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvEstimatedPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Scheduled (optional) -->
                    <View
                        android:id="@+id/dividerScheduled"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutScheduled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Scheduled:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvScheduled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Start Time (optional) -->
                    <View
                        android:id="@+id/dividerStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutScheduledTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Start Time:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvScheduledTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Status Hints -->
                <TextView
                    android:id="@+id/tvStatusHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E8EEF5"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="#133E87"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/layoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrimaryAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accept Ride"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#133E87"
                        android:paddingVertical="12dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSecondaryAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel Ride"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#dc3545"
                        android:paddingVertical="12dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- Cancel reason form (initially hidden) -->
                <LinearLayout
                    android:id="@+id/layoutCancelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_input">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason for cancellation"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCancelReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:hint="Enter reason (required)"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@drawable/bg_input"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:maxLines="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btnConfirmCancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Confirm"
                            android:backgroundTint="#dc3545"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btnDismissCancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dismiss"
                            android:backgroundTint="@color/dark_blue"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Ride Completed State -->
            <LinearLayout
                android:id="@+id/layoutRideCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_completion_background"
                android:padding="32dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Completed!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvFinalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration: "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textColor="#133E87"
                    android:backgroundTint="@android:color/white"
                    android:paddingHorizontal="48dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>