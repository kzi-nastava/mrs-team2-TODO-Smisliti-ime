<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".fragments.DriverProfileInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvEditProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_personal_information"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="24dp"/>

        <!-- Profile Picture -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/unregistered_profile"
                android:contentDescription="@string/profile_picture"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tab Buttons (Driver / Vehicle) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDriverTab"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/driver_tab"
                android:textColor="@color/white"
                android:backgroundTint="@color/selected_blue"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVehicleTab"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vehicle_tab"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_blue"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Recent Hours Active -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/blue">

            <TextView
                android:id="@+id/tvRecentHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_hours_placeholder"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="16dp"
                android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Driver Info Section -->
        <LinearLayout
            android:id="@+id/layoutDriverInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/email_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/first_name_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/last_name_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/phone_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/address_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Vehicle Info Section -->
        <LinearLayout
            android:id="@+id/layoutVehicleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Vehicle Model Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/vehicle_model_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vehicle Type Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/vehicle_type_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <AutoCompleteTextView
                    android:id="@+id/actvVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Registration Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/registration_number_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegistrationNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Seat Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/seat_number_hint"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/dark_blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSeatNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Allow Pets Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_pets"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="8dp"
                app:buttonTint="@color/dark_blue"/>

            <!-- Allow Babies Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowBabies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_babies"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="24dp"
                app:buttonTint="@color/dark_blue"/>

        </LinearLayout>

        <!-- Change Password Link -->
        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingHorizontal="48dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@color/dark_blue"/>

    </LinearLayout>

</ScrollView>