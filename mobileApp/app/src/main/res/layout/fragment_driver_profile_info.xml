<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".fragments.drivers.DriverProfileInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvEditProfileTitle"
            style="@style/ProfileTitle"
            android:text="@string/edit_personal_information"
            android:layout_marginBottom="24dp"/>

        <!-- Blocked Banner -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvBlockedBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#D32F2F">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your account has been blocked."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBlockedReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Profile Picture -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/unregistered_profile"
                android:contentDescription="@string/profile_picture"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tab Buttons (Driver / Vehicle) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDriverTab"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/driver_tab"
                android:textColor="@color/white"
                android:backgroundTint="@color/selected_blue"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVehicleTab"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vehicle_tab"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_blue"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Recent Hours Active -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/blue">

            <TextView
                android:id="@+id/tvRecentHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_hours_placeholder"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="16dp"
                android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Driver Info Section -->
        <LinearLayout
            android:id="@+id/layoutDriverInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/email_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/AppTextInputEditText"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- First Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/first_name_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/last_name_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/phone_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    style="@style/AppTextInputEditText"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:layout_marginBottom="24dp"
                android:hint="@string/address_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    style="@style/AppTextInputEditText"
                    android:inputType="textPostalAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Vehicle Info Section -->
        <LinearLayout
            android:id="@+id/layoutVehicleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Vehicle Model -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/vehicle_model_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleModel"
                    style="@style/AppTextInputEditText"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Vehicle Type Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppDropdownLayout"
                android:hint="@string/vehicle_type_hint">
                <AutoCompleteTextView
                    android:id="@+id/actvVehicleType"
                    style="@style/AppDropdownText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Registration Number -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/registration_number_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegistrationNumber"
                    style="@style/AppTextInputEditText"
                    android:inputType="textCapCharacters"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Seat Number -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTextInputLayout"
                android:hint="@string/seat_number_hint">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSeatNumber"
                    style="@style/AppTextInputEditText"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Allow Pets Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_pets"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="8dp"
                app:buttonTint="@color/dark_blue"/>

            <!-- Allow Babies Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbAllowBabies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_babies"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="24dp"
                app:buttonTint="@color/dark_blue"/>

        </LinearLayout>

        <!-- Change Password Link -->
        <TextView
            android:id="@+id/tvChangePassword"
            style="@style/LinkText"
            android:text="@string/change_password"
            android:layout_marginBottom="24dp"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/AppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:paddingHorizontal="48dp"
            android:paddingVertical="12dp"/>

    </LinearLayout>

</ScrollView>