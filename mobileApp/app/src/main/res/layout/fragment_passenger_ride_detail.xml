<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Map showing route -->
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp">
            <fragment
                android:id="@+id/map_fragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- Ride details card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dark_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvRideDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ride Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvStartLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tvEndLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tvPanicActivated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvPassengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Driver info card (collapsible) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dark_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvDriverHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver: Loading..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:drawableEnd="@android:drawable/arrow_down_float"/>
                <LinearLayout
                    android:id="@+id/layoutDriverDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/tvDriverDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Driver details + vehicle info"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reports section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inconsistency Reports"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvReportsLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading reports..."
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNoReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No reports submitted."
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/reportsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Ratings summary card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/dark_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAvgDriverRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver rating: -"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvAvgVehicleRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle rating: -"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/ratingsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action buttons -->
        <Button
            android:id="@+id/btnRateRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate this ride"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnFavoriteRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite this ride"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnUnfavoriteRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unfavorite this ride"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnReorderRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-order this ride"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</ScrollView>
