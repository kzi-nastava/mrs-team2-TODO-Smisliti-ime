<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8FABD4">

    <!-- Map -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Ride Tracking Information -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fillViewport="true"
        android:background="#CBDCEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/layoutLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E8EEF5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading ride information..."
                    android:textSize="14sp"
                    android:textColor="#133E87"/>

            </LinearLayout>

            <!-- No Ride State -->
            <LinearLayout
                android:id="@+id/layoutNoRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="#E8EEF5"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No active ride found"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#133E87"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please order a ride first"
                    android:textSize="14sp"
                    android:textColor="#133E87"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Ride Tracking State -->
            <LinearLayout
                android:id="@+id/layoutRideTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Status Message Title -->
                <TextView
                    android:id="@+id/tvStatusMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver is on the way!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#133E87"
                    android:layout_marginBottom="16dp"/>

                <!-- Ride Info Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#E8EEF5"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <!-- Starting Point -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Starting Point:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvStartPoint"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Destination -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Destination:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Driver Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Driver:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvDriverName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"
                            android:gravity="end"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Estimated Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Time:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvEstimatedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Estimated Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Price:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvEstimatedPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Progress Percent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Progress:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A133E87"/>

                    <!-- Time Remaining -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Time Remaining:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#133E87"/>

                        <TextView
                            android:id="@+id/tvTimeRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- min"
                            android:textSize="14sp"
                            android:textColor="#133E87"/>

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar"
                        android:progress="0"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel Ride"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#dc3545"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPanic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Alert"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#ff6b6b"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible"/>

                <!-- Report Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report Route"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#133E87"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Report Form -->
                <LinearLayout
                    android:id="@+id/reportForm"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="#E8EEF5"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="Describe the issue:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#133E87"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editReport"
                        android:hint="Enter your note..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubmitReport"
                            android:text="Submit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="#133E87"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelReport"
                            android:text="Cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="#dc3545"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Ride Completed State -->
            <LinearLayout
                android:id="@+id/layoutRideCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#133E87"
                android:padding="32dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Completed!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="24dp"/>

                <!-- Total Price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvFinalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration: "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Start Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time: "
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- End Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time: "
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textColor="#133E87"
                    android:backgroundTint="@android:color/white"
                    android:paddingHorizontal="48dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>