<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/ride_history_card"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tvRideDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_details"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"/>

        <TextView
            android:id="@+id/tvDate"
            android:text="@string/date_label"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStartLocation"
            android:text="@string/from_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEndLocation"
            android:text="@string/to_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvStartTime"
            android:text="@string/start_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:text="@string/end_time_label"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPanicActivated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/panic_activated_label"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12sp"/>

        <TextView
            android:id="@+id/tvPassengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passengers_label"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvReportsTitle"
        android:text="Reported inconsistencies"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvReportsLoading"
        android:text="Loading reports..."
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNoReports"
        android:text="No reports for this ride"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/reportsContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>