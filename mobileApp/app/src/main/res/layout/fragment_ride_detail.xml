<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RideDetailFragment"
    android:background="#8FABD4">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/ride_history_card"
        android:layout_gravity="center"
        android:gravity="center">


        <TextView
            android:id="@+id/tvRideDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Details"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/tvDate"
        android:text="Date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvStartLocation"
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEndLocation"
        android:text="To:"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvStartTime"
        android:text="Start time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEndTime"
        android:text="End time:"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPanicActivated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panic Activated: "
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="16sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPassengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passengers: "
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
</LinearLayout>
</FrameLayout>